@page
@model wordNote.Pages.Words.DeleteModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <br />
    <h3>本当にこの投稿を削除しますか？</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                人物
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Person)
            </dd>
            <dt class="col-sm-2">
                言葉
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Line)
            </dd>
            <dt class="col-sm-2">
                職業
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Profession)
            </dd>
            <dt class="col-sm-2">
                年号
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Word.Span)
            </dd>
        </dl>
        <br /><br /><br />
        <form method="post">
            <input type="hidden" asp-for="Word.Id" />
            <input type="hidden" asp-for="Word.Submitter" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <br />
        <button onclick="location.href='javascript:history.back()'" class="btn btn-primary">Back</button>
    </div>
    <style>


        .container {
            text-align: center;
            display: -webkit-flex;
            display: flex;
            -webkit-justify-content: center;
        }

        .main {
            text-align: center;
            display: -webkit-flex;
            display: flex;
        }

        .row {
            margin: auto;
            width: 100%;
        }
    </style>
</body>
</html>
