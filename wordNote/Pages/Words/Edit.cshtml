@page
@model wordNote.Pages.Words.EditModel

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <br />
    <h4>編集</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Word.Id" />
                <div class="form-group">
                    <label asp-for="Word.Person" class="control-label">人物</label>
                    <input asp-for="Word.Person" class="form-control" />
                    <span asp-validation-for="Word.Person" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Word.Line" class="control-label">言葉</label>
                    <input asp-for="Word.Line" class="form-control" />
                    <span asp-validation-for="Word.Line" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Word.Profession" class="control-label">職業</label>
                    <input asp-for="Word.Profession" class="form-control" />
                    <span asp-validation-for="Word.Profession" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Word.Span" class="control-label">年号</label>
                    <input asp-for="Word.Span" class="form-control" />
                    <span asp-validation-for="Word.Span" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Word.Submitter" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <button onclick="location.href='javascript:history.go(-1)'" class="btn btn-primary">Back</button>
    </div>
    <style>


        .container {
            text-align: center;
            display: -webkit-flex;
            display: flex;
            -webkit-justify-content: center;
        }

        .main {
            text-align: center;
            display: -webkit-flex;
            display: flex;
        }

        .row {
            margin: auto;
            width: 300%;
        }
    </style>
</body>
</html>
