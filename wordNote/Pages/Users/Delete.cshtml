@page
@model wordNote.Pages.Users.DeleteModel
@{
    ViewData["User"] = Model.User.Id;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <br />
    <h3>本当にこのアカウントを削除しますか？</h3>
    <div>
        <h4>@ViewData["User"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Password)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Password)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Age)
            </dd>
        </dl>
        <br/><br /><br />
        <form method="post">
            <input type="hidden" asp-for="User.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button onclick="location.href='javascript:history.back()'" class="btn btn-primary">Back</button>
        </form>
    </div>
    <style>

        .container {
            text-align: center;
            display: -webkit-flex;
            display: flex;
            -webkit-justify-content: center;
        }

        .main {
            text-align: center;
            display: -webkit-flex;
            display: flex;
        }

        .row {
            margin: auto;
            width: 100%;
        }
    </style>
</body>
</html>
