@page
@model wordNote.Pages.Users.DeleteModel
@{
    ViewData["UserName"] = Model.UserName;
 }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

    <h3>本当にこのアカウントを削除しますか？</h3>
    <div>
        <h4>@ViewData["UserName"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                パスワード
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Password)
            </dd>
            <dt class="col-sm-2">
                名前
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Name)
            </dd>
            <dt class="col-sm-2">
                年齢
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Age)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="user.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <br />
        <button onclick="location.href='javascript:history.back()'" class="btn btn-primary">Back</button>
    </div>
    <style>

        .container {
            text-align: center;
            display: -webkit-flex;
            display: flex;
            -webkit-justify-content: center;
        }

        .main {
            text-align: center;
            display: -webkit-flex;
            display: flex;
        }

        .row {
            margin: auto;
            width: 100%;
        }

        .col-sm-2
        {
            width:70%;
        }
    </style>

</body>
</html>
